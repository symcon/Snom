{
    "elements": [
        {
            "type": "Label",
            "caption": "Configure Snom IP phone",
            "name": "InstanceLabel"
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "ValidationTextBox",
                    "caption": "IP address",
                    "name": "PhoneIP",
                    "validate": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?).){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
                },
                {
                    "type": "Button",
                    "caption": "Ping",
                    "onClick": "echo SNMD_PingPhone($id);"
                }
            ]
        },
        {
            "type": "ValidationTextBox",
            "caption": "MAC address",
            "name": "PhoneMac",
            "validate": "^((00:04:13:)([0-9a-fA-F]{2}:){2})|((000413)([0-9a-fA-F]{2}){2})[0-9a-fA-F]{2}$"
        },
        {
            "type": "Select",
            "caption": "Phone model",
            "name": "PhoneModel",
            "options": [
                {
                    "caption": "Snom D335",
                    "value": "snomD335"
                },
                {
                    "caption": "Snom D385",
                    "value": "snomD385"
                },
                {
                    "caption": "Snom D735",
                    "value": "snomD735"
                },
                {
                    "caption": "Snom D785",
                    "value": "snomD785"
                },
                {
                    "caption": "Snom D862",
                    "value": "snomD862"
                },
                {
                    "caption": "Snom D865",
                    "value": "snomD865"
                }
            ]
        },
        {
            "type": "ValidationTextBox",
            "caption": "Local IP address",
            "name": "LocalIP",
            "validate": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?).){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
        },
        {
            "type": "Button",
            "caption": "See current function keys settings",
            "link": true,
            "onClick": "echo 'http://' . $PhoneIP . '/fkey.htm';"
        },
        {
            "type": "List",
            "caption": "Function keys settings",
            "name": "FkeysSettings",
            "add": false,
            "delete": false,
            "columns": [
                {
                    "caption": "Function key",
                    "name": "FkeyNo",
                    "width": "100px",
                    "align": "center",
                    "add": 1,
                    "edit": {
                        "type": "NumberSpinner"
                    }
                },            
                {
                    "caption": "Label",
                    "name": "FkeyLabel",
                    "width": "150px",
                    "align": "center",
                    "add": "",
                    "edit": {
                        "type": "ValidationTextBox"
                    }
                },
                {
                    "caption": "Color for status on",
                    "name": "FkeyColorOn",
                    "width": "100px",
                    "align": "center",
                    "add": "",
                    "edit": {
                        "type": "Select",
                        "options": [
                            {
                                "caption": "Green",
                                "value": "green"
                            },
                            {
                                "caption": "Red",
                                "value": "red"
                            },
                            {
                                "caption": "Yellow",
                                "value": "yellow"
                            },
                            {
                                "caption": "None",
                                "value": "none"
                            }
                        ]
                    }
                },
                {
                    "caption": "Color for status off",
                    "name": "FkeyColorOff",
                    "width": "100px",
                    "align": "center",
                    "add": "",
                    "edit": {
                        "type": "Select",
                        "options": [
                            {
                                "caption": "Green",
                                "value": "green"
                            },
                            {
                                "caption": "Red",
                                "value": "red"
                            },
                            {
                                "caption": "Yellow",
                                "value": "yellow"
                            },
                            {
                                "caption": "None",
                                "value": "none"
                            }
                        ]
                    }
                },
                {
                    "caption": "Functionality",
                    "name": "RecieveOnly",
                    "width": "100px",
                    "visible": false,
                    "add": false,
                    "edit": {
                        "type": "Select"
                    }
                },
                {
                    "caption": "Action variable",
                    "name": "ActionVariableId",
                    "width": "300px",
                    "align": "center",
                    "add": 0,
                    "edit": {
                        "type": "SelectVariable"
                    }
                },
                {
                    "caption": "Action",
                    "name": "ActionValue",
                    "width": "100px",
                    "align": "center",
                    "add": 0,
                    "edit": {
                        "type": "SelectAction"
                    }
                },
                {
                    "caption": "Use action target for status LED",
                    "name": "TargetIsStatus",
                    "width": "100px",
                    "visible": false,
                    "add": false,
                    "edit": {
                        "type": "CheckBox"
                    }
                },
                {
                    "caption": "Status variable",
                    "name": "StatusVariableId",
                    "width": "300px",
                    "align": "center",
                    "add": 0,
                    "edit": {
                        "type": "SelectVariable"
                    }
                }
            ],
            "values": [],
            "form": [
                {
                    "type": "ValidationTextBox",
                    "name": "FkeyNo",
                    "caption": "Function key",
                    "enabled": false
                },
                {
                    "type": "ValidationTextBox",
                    "name": "FkeyLabel",
                    "caption": "Label"
                },
                {
                    "type": "Select",
                    "name": "FkeyColorOn",
                    "caption": "Color for status on",
                    "options": [
                        {
                            "caption": "Green",
                            "value": "green"
                        },
                        {
                            "caption": "Red",
                            "value": "red"
                        },
                        {
                            "caption": "Yellow",
                            "value": "yellow"
                        },
                        {
                            "caption": "None",
                            "value": "none"
                        }
                    ]
                },
                {
                    "type": "Select",
                    "name": "FkeyColorOff",
                    "caption": "Color for status off",
                    "options": [
                        {
                            "caption": "Green",
                            "value": "green"
                        },
                        {
                            "caption": "Red",
                            "value": "red"
                        },
                        {
                            "caption": "Yellow",
                            "value": "yellow"
                        },
                        {
                            "caption": "None",
                            "value": "none"
                        }
                    ]
                },
                {
                    "type": "Select",
                    "name": "RecieveOnly",
                    "caption": "Functionality",
                    "options": [
                        {
                            "caption": "Update status LED",
                            "value": true
                        },
                        {
                            "caption": "Update status LED and trigger action",
                            "value": false
                        }
                    ],
                    "onChange": "SNMD_setFkeyFunctionality($id, $RecieveOnly);"
                },
                {
                    "type": "SelectVariable",
                    "name": "ActionVariableId",
                    "caption": "Action variable",
                    "visible": false
                },
                {
                    "type": "SelectAction",
                    "name": "ActionValue",
                    "caption": "Action",
                    "onChange": "SNMD_SetVariablesIds($id, $ActionValue, true);"
                },
                {
                    "type": "CheckBox",
                    "name": "TargetIsStatus",
                    "caption": "Use action target for status LED",
                    "onChange": "SNMD_SetVariablesIds($id, $ActionValue, $TargetIsStatus);"
                },
                {
                    "type": "SelectVariable",
                    "name": "StatusVariableId",
                    "caption": "Status variable"
                }
            ]
        }
    ]
}